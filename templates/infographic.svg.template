<svg viewBox="0 0 1200 800" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <!-- Background gradient -->
    <linearGradient id="heroGrad" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#1a1a2e;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#16213e;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0f0f23;stop-opacity:1" />
    </linearGradient>

    <!-- Accent gradient -->
    <linearGradient id="accentGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:{GRADIENT_START};stop-opacity:1" />
      <stop offset="50%" style="stop-color:{GRADIENT_MID};stop-opacity:1" />
      <stop offset="100%" style="stop-color:{GRADIENT_END};stop-opacity:1" />
    </linearGradient>

    <!-- Glassmorphism card gradient -->
    <linearGradient id="cardGrad" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:rgba(255,255,255,0.12);stop-opacity:1" />
      <stop offset="100%" style="stop-color:rgba(255,255,255,0.05);stop-opacity:1" />
    </linearGradient>

    <!-- Metric success gradient -->
    <linearGradient id="metricGrad" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#22c55e;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#10b981;stop-opacity:1" />
    </linearGradient>

    <!-- Glassmorphism shadow -->
    <filter id="glass" x="-50%" y="-50%" width="200%" height="200%">
      <feGaussianBlur in="SourceAlpha" stdDeviation="4"/>
      <feOffset dx="0" dy="4" result="offsetblur"/>
      <feComponentTransfer>
        <feFuncA type="linear" slope="0.2"/>
      </feComponentTransfer>
      <feMerge>
        <feMergeNode/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>

  <!-- Background -->
  <rect width="1200" height="800" fill="url(#heroGrad)"/>

  <!-- Decorative gradient orbs -->
  <ellipse cx="200" cy="150" rx="300" ry="300" fill="url(#accentGrad)" opacity="0.06"/>
  <ellipse cx="1000" cy="600" rx="350" ry="350" fill="url(#accentGrad)" opacity="0.04"/>

  <!-- Section 1: Header Bar -->
  <g transform="translate(60, 40)">
    <text x="0" y="0" font-family="system-ui, -apple-system, sans-serif" font-size="28" font-weight="700" fill="#ffffff">{PROJECT_NAME}</text>
    <rect x="0" y="15" width="80" height="28" rx="14" fill="url(#accentGrad)" opacity="0.2"/>
    <rect x="0" y="15" width="80" height="28" rx="14" fill="none" stroke="url(#accentGrad)" stroke-width="1.5"/>
    <text x="40" y="35" font-family="system-ui, -apple-system, sans-serif" font-size="13" font-weight="600" fill="url(#accentGrad)" text-anchor="middle">{VERSION}</text>
  </g>

  <!-- Section 2: Hero -->
  <g transform="translate(60, 120)">
    <text x="0" y="0" font-family="system-ui, -apple-system, sans-serif" font-size="12" font-weight="600" fill="url(#accentGrad)" letter-spacing="2" style="text-transform:uppercase">{EYEBROW}</text>
    <text x="0" y="50" font-family="system-ui, -apple-system, sans-serif" font-size="56" font-weight="700" fill="#ffffff" style="line-height:1.1">{HERO_HEADLINE}</text>
    <text x="0" y="100" font-family="system-ui, -apple-system, sans-serif" font-size="20" font-weight="400" fill="rgba(255,255,255,0.7)">{HERO_SUBHEADLINE}</text>
  </g>

  <!-- Section 3: Metrics Bar -->
  <g transform="translate(60, 300)">
    <!-- Glassmorphism container -->
    <rect x="0" y="0" width="1080" height="90" rx="16" fill="url(#cardGrad)" filter="url(#glass)"/>
    <rect x="0" y="0" width="1080" height="90" rx="16" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="1"/>

    <!-- Metric 1 -->
    <g transform="translate(90, 30)">
      <text x="0" y="0" font-family="system-ui, -apple-system, sans-serif" font-size="32" font-weight="700" fill="url(#metricGrad)" text-anchor="middle">{METRIC_1_VALUE}</text>
      <text x="0" y="28" font-family="system-ui, -apple-system, sans-serif" font-size="13" font-weight="500" fill="rgba(255,255,255,0.6)" text-anchor="middle">{METRIC_1_LABEL}</text>
    </g>

    <!-- Separator 1 -->
    <line x1="360" y1="20" x2="360" y2="70" stroke="rgba(255,255,255,0.1)" stroke-width="1"/>

    <!-- Metric 2 -->
    <g transform="translate(540, 30)">
      <text x="0" y="0" font-family="system-ui, -apple-system, sans-serif" font-size="32" font-weight="700" fill="url(#metricGrad)" text-anchor="middle">{METRIC_2_VALUE}</text>
      <text x="0" y="28" font-family="system-ui, -apple-system, sans-serif" font-size="13" font-weight="500" fill="rgba(255,255,255,0.6)" text-anchor="middle">{METRIC_2_LABEL}</text>
    </g>

    <!-- Separator 2 -->
    <line x1="720" y1="20" x2="720" y2="70" stroke="rgba(255,255,255,0.1)" stroke-width="1"/>

    <!-- Metric 3 -->
    <g transform="translate(990, 30)">
      <text x="0" y="0" font-family="system-ui, -apple-system, sans-serif" font-size="32" font-weight="700" fill="url(#metricGrad)" text-anchor="middle">{METRIC_3_VALUE}</text>
      <text x="0" y="28" font-family="system-ui, -apple-system, sans-serif" font-size="13" font-weight="500" fill="rgba(255,255,255,0.6)" text-anchor="middle">{METRIC_3_LABEL}</text>
    </g>
  </g>

  <!-- Section 4: Workflow Panel -->
  <g transform="translate(60, 420)">
    <text x="0" y="0" font-family="system-ui, -apple-system, sans-serif" font-size="20" font-weight="600" fill="#ffffff">How It Works</text>

    <!-- Step 1 -->
    <g transform="translate(0, 40)">
      <circle cx="20" cy="0" r="20" fill="url(#accentGrad)" opacity="0.2"/>
      <circle cx="20" cy="0" r="20" fill="none" stroke="url(#accentGrad)" stroke-width="2"/>
      <text x="20" y="6" font-family="system-ui, -apple-system, sans-serif" font-size="16" font-weight="700" fill="url(#accentGrad)" text-anchor="middle">1</text>
      <text x="55" y="6" font-family="system-ui, -apple-system, sans-serif" font-size="15" font-weight="500" fill="rgba(255,255,255,0.85)">{STEP_1}</text>
    </g>

    <!-- Arrow 1 -->
    <path d="M 250 460 L 290 460" stroke="rgba(255,255,255,0.3)" stroke-width="2" fill="none"/>
    <path d="M 285 455 L 290 460 L 285 465" stroke="rgba(255,255,255,0.3)" stroke-width="2" fill="none"/>

    <!-- Step 2 -->
    <g transform="translate(310, 40)">
      <circle cx="20" cy="0" r="20" fill="url(#accentGrad)" opacity="0.2"/>
      <circle cx="20" cy="0" r="20" fill="none" stroke="url(#accentGrad)" stroke-width="2"/>
      <text x="20" y="6" font-family="system-ui, -apple-system, sans-serif" font-size="16" font-weight="700" fill="url(#accentGrad)" text-anchor="middle">2</text>
      <text x="55" y="6" font-family="system-ui, -apple-system, sans-serif" font-size="15" font-weight="500" fill="rgba(255,255,255,0.85)">{STEP_2}</text>
    </g>

    <!-- Arrow 2 -->
    <path d="M 560 460 L 600 460" stroke="rgba(255,255,255,0.3)" stroke-width="2" fill="none"/>
    <path d="M 595 455 L 600 460 L 595 465" stroke="rgba(255,255,255,0.3)" stroke-width="2" fill="none"/>

    <!-- Step 3 -->
    <g transform="translate(620, 40)">
      <circle cx="20" cy="0" r="20" fill="url(#accentGrad)" opacity="0.2"/>
      <circle cx="20" cy="0" r="20" fill="none" stroke="url(#accentGrad)" stroke-width="2"/>
      <text x="20" y="6" font-family="system-ui, -apple-system, sans-serif" font-size="16" font-weight="700" fill="url(#accentGrad)" text-anchor="middle">3</text>
      <text x="55" y="6" font-family="system-ui, -apple-system, sans-serif" font-size="15" font-weight="500" fill="rgba(255,255,255,0.85)">{STEP_3}</text>
    </g>

    <!-- Arrow 3 -->
    <path d="M 870 460 L 910 460" stroke="rgba(255,255,255,0.3)" stroke-width="2" fill="none"/>
    <path d="M 905 455 L 910 460 L 905 465" stroke="rgba(255,255,255,0.3)" stroke-width="2" fill="none"/>

    <!-- Step 4 -->
    <g transform="translate(930, 40)">
      <circle cx="20" cy="0" r="20" fill="url(#accentGrad)" opacity="0.2"/>
      <circle cx="20" cy="0" r="20" fill="none" stroke="url(#accentGrad)" stroke-width="2"/>
      <text x="20" y="6" font-family="system-ui, -apple-system, sans-serif" font-size="16" font-weight="700" fill="url(#accentGrad)" text-anchor="middle">4</text>
      <text x="55" y="6" font-family="system-ui, -apple-system, sans-serif" font-size="15" font-weight="500" fill="rgba(255,255,255,0.85)">{STEP_4}</text>
    </g>
  </g>

  <!-- Section 5: Value Cards -->
  <g transform="translate(60, 540)">
    <!-- Card 1 -->
    <g>
      <rect x="0" y="0" width="340" height="100" rx="12" fill="url(#cardGrad)" filter="url(#glass)"/>
      <rect x="0" y="0" width="340" height="100" rx="12" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="1"/>
      <text x="20" y="35" font-family="system-ui, -apple-system, sans-serif" font-size="16" font-weight="600" fill="#ffffff">{CARD_1_TITLE}</text>
      <text x="20" y="60" font-family="system-ui, -apple-system, sans-serif" font-size="13" font-weight="400" fill="rgba(255,255,255,0.6)">{CARD_1_DESC}</text>
    </g>

    <!-- Card 2 -->
    <g transform="translate(370, 0)">
      <rect x="0" y="0" width="340" height="100" rx="12" fill="url(#cardGrad)" filter="url(#glass)"/>
      <rect x="0" y="0" width="340" height="100" rx="12" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="1"/>
      <text x="20" y="35" font-family="system-ui, -apple-system, sans-serif" font-size="16" font-weight="600" fill="#ffffff">{CARD_2_TITLE}</text>
      <text x="20" y="60" font-family="system-ui, -apple-system, sans-serif" font-size="13" font-weight="400" fill="rgba(255,255,255,0.6)">{CARD_2_DESC}</text>
    </g>

    <!-- Card 3 -->
    <g transform="translate(740, 0)">
      <rect x="0" y="0" width="340" height="100" rx="12" fill="url(#cardGrad)" filter="url(#glass)"/>
      <rect x="0" y="0" width="340" height="100" rx="12" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="1"/>
      <text x="20" y="35" font-family="system-ui, -apple-system, sans-serif" font-size="16" font-weight="600" fill="#ffffff">{CARD_3_TITLE}</text>
      <text x="20" y="60" font-family="system-ui, -apple-system, sans-serif" font-size="13" font-weight="400" fill="rgba(255,255,255,0.6)">{CARD_3_DESC}</text>
    </g>
  </g>

  <!-- Section 6: Terminal -->
  <g transform="translate(60, 660)">
    <!-- Terminal background -->
    <rect x="0" y="0" width="1080" height="70" rx="8" fill="#0d0d14"/>
    <rect x="0" y="0" width="1080" height="70" rx="8" fill="none" stroke="rgba(255,255,255,0.15)" stroke-width="1"/>

    <!-- Terminal chrome dots -->
    <circle cx="20" cy="20" r="6" fill="#ff5f56"/>
    <circle cx="40" cy="20" r="6" fill="#ffbd2e"/>
    <circle cx="60" cy="20" r="6" fill="#27c93f"/>

    <!-- Terminal content -->
    <text x="90" y="28" font-family="Menlo, Monaco, Consolas, monospace" font-size="14" font-weight="400" fill="#22c55e">$</text>
    <text x="110" y="28" font-family="Menlo, Monaco, Consolas, monospace" font-size="14" font-weight="400" fill="#ffffff">{TERMINAL_COMMAND}</text>
    <text x="90" y="50" font-family="Menlo, Monaco, Consolas, monospace" font-size="12" font-weight="400" fill="rgba(255,255,255,0.5)">{TERMINAL_COMMENT}</text>
  </g>

  <!-- Section 7: Footer -->
  <g transform="translate(60, 750)">
    <text x="0" y="0" font-family="system-ui, -apple-system, sans-serif" font-size="12" font-weight="400" fill="rgba(255,255,255,0.5)">{FOOTER_LEFT}</text>
    <text x="540" y="0" font-family="system-ui, -apple-system, sans-serif" font-size="12" font-weight="500" fill="rgba(255,255,255,0.6)" text-anchor="middle">{FOOTER_CENTER}</text>
    <text x="1080" y="0" font-family="system-ui, -apple-system, sans-serif" font-size="12" font-weight="400" fill="rgba(255,255,255,0.5)" text-anchor="end">{FOOTER_RIGHT}</text>
  </g>
</svg>
